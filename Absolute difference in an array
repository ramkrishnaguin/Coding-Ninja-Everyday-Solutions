def absDiff(arr, n):

    currOdd = 0

    currEven = 0

    for i in range(n):

        if(i % 2 == 0):

            currEven = abs(currEven - arr[i])

        else:

            currOdd = abs(currOdd - arr[i])

    return (currEven, currOdd)
